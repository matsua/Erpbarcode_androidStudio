<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
	    android:layout_height="30dp"
	    android:orientation="horizontal">
	    
	 	<!-- √ -->
	    <CheckBox
		    android:id="@+id/device_isChecked"
		    android:layout_width="40dp"
			android:layout_height="wrap_content"
			android:checked="false"
			android:padding="0dp"
			android:focusable="false"
			android:soundEffectsEnabled="true"
			android:focusableInTouchMode="true" />
	    <!-- 위치코드 -->
	    <TextView
	        android:id="@+id/device_item1"
	        android:layout_width="240dp"
	        style="@style/Form.Styled.NormalTextView" />
	    <!-- 위치명 -->
	    <TextView
	        android:id="@+id/device_item2"
	        android:layout_width="240dp"
	        style="@style/Form.Styled.NormalTextView" />
	    <!-- 대표주소코드 -->
	    <TextView
	        android:id="@+id/device_item3"
	        android:layout_width="160dp"
	        style="@style/Form.Styled.NormalTextView" />
	    <!-- 대표주소명 -->
	    <TextView
	        android:id="@+id/device_item4"
	        android:layout_width="240dp"
	        style="@style/Form.Styled.NormalTextView" />
	    <!-- 장비ID -->
	    <TextView
	        android:id="@+id/device_item5"
	        android:layout_width="120dp"
	        style="@style/Form.Styled.NormalTextView" />
	    <!-- 장치ID -->
	    <TextView
	        android:id="@+id/device_item6"
	        android:layout_width="120dp"
	        style="@style/Form.Styled.NormalTextView" />
	    <!-- 장비(장치)명 -->
	    <TextView
	        android:id="@+id/device_item7"
	        android:layout_width="240dp"
	        style="@style/Form.Styled.NormalTextView" />
    </LinearLayout>
</LinearLayout>
